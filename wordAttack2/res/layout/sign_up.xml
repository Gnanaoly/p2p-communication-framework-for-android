<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="fill_parent" android:background="@drawable/log_in2"
	android:layout_width="wrap_content"
	android:padding="15px">
	<TextView android:layout_width="fill_parent" android:textSize="36dip"
		android:text="Sign Up" android:layout_height="wrap_content"
		android:id="@+id/label" android:layout_alignParentLeft="true"
		android:textColor="#0000ff">
	</TextView>

	<EditText 	android:id = "@+id/inputnick"
				android:layout_width = "fill_parent"
				android:layout_height = "wrap_content"
				android:layout_below="@id/label" 
				android:hint="Please Enter your Nick Name" android:inputType="textEmailAddress">
	</EditText>
	<EditText 	android:id = "@+id/inputemail"
				android:layout_width = "fill_parent"
				android:layout_height = "wrap_content"
				android:layout_below="@id/inputnick" 
				android:hint="Please Enter your Email" android:inputType="textEmailAddress">
	</EditText>
	
	<EditText 	android:id = "@+id/inputpassword"
				android:layout_width = "fill_parent"
				android:layout_height = "wrap_content"
				android:layout_below="@id/inputemail" 
				android:inputType="textPassword" android:hint="Please Enter Password">
	</EditText>
            
    <Button android:id="@+id/sign_up" 
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content" 
            android:layout_below="@id/inputpassword"
            android:layout_alignParentRight="true"
            android:text="Sign Up Now!" />

</RelativeLayout>
